<%= form_with(model: @recipe, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cook_time %>
    <%= form.number_field :cook_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty %>
    <%= form.select :difficulty, ["Easy", "Medium", "Hard"], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :instructions %>
    <%= form.rich_text_area :instructions %>
  </div>

  <%= form.submit "Save Recipe", class: "btn btn-primary" %>
<% end %>
