<div class="container my-4">
  <h1>All Recipes</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Cook Time (mins)</th>
        <th>Difficulty</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.cook_time %></td>
          <td><%= recipe.difficulty %></td>
          <td><%= link_to 'Show', recipe, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to "Delete", recipe_path(recipe), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-success" %>
</div>
