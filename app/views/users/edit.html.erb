<h1>Edit User</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :role %><br>
    <%= form.select :role, User.roles.keys.map { |r| [r.titleize, r] } %>
  </div>

  <div>
    <%= form.submit "Update User" %>
  </div>
<% end %>
